{%- from 'atoms-icon' import icon -%}
{%- from 'atoms-image' import image -%}

<footer class="grav-c-footer {{ footer.class }}">
  <div class="grav-o-container">
    {{ image("/images/logos/logo-buildit-footer.png", "Buildit a wipro digital company", "grav-c-footer__logo") | safe }}

    <div class="grav-c-footer__lists">
      <ul class="grav-c-footer__lists-entry">
        {% for link in footer.linksA -%}
          <li><a src="{{link.url}}">{{link.label}}</a></li>
        {%- endfor %}
      </ul>

      <ul class="grav-c-footer__lists-entry">
          {% for link in footer.linksB -%}
            <li><a src="{{link.url}}">{{link.label}}</a></li>
          {%- endfor %}
      </ul>
    </div>

    <p>
      {{footer.copy | safe}}
    </p>
  </div>
</footer>
