{
  "name": "@buildit/gravity-ui-web",
  "version": "2.1.1",
  "description": "Library of styles, components and associated assets to build UIs for the web. Part of Buildit's Gravity design system.",
  "main": "dist/ui-lib/gravity.js",
  "bundlesize": [
    {
      "path": "dist/ui-lib/*.js",
      "maxSize": "30 kB"
    },
    {
      "path": "dist/ui-lib/*.css",
      "maxSize": "30 kB"
    },
    {
      "path": "dist/ui-lib/*.svg",
      "maxSize": "60 kB"
    }
  ],
  "files": [
    "build-api.js",
    "build-consts.js",
    "dist/ui-lib/",
    "src/ui-lib/",
    "eyeglass-exports.js"
  ],
  "scripts": {
    "clean": "gulp clean",
    "build": "gulp",
    "styleguide": "gulp styleguide",
    "start": "gulp serve",
    "bundlesize": "npm run build && bundlesize",
    "test": "npm run lint && npm run bundlesize",
    "lint": "stylelint 'src/ui-lib/sass/**/*.scss'",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/buildit/gravity-ui-web.git"
  },
  "keywords": [
    "eyeglass-module",
    "sass",
    "ui",
    "css",
    "web",
    "design",
    "gravity",
    "buildit",
    "eyeglass",
    "style",
    "design-system",
    "style-guide"
  ],
  "author": {
    "name": "Buildit",
    "url": "http://buildit.wiprodigital.com/"
  },
  "contributors": [
    "Gregg Anderson",
    "Ash Blue (https://twitter.com/AshBlueWD)",
    "Daniel Bull",
    "Allan Corbett (http://superallan.com)",
    "Valerio Francescangeli",
    "James Nash (http://cirrus.twiddles.com/)",
    "Ben Oakenfull",
    "Marcos Peebles",
    "Matteo Pescarin (http://peach.smartart.it)",
    "Daniel Wilkinson"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buildit/gravity-ui-web/issues"
  },
  "homepage": "https://github.com/buildit/gravity-ui-web/tree/develop/packages/gravity-ui-web#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@buildit/semantic-release": "^1.0.0",
    "@pattern-lab/core": "^5.1.0",
    "@pattern-lab/engine-nunjucks": "^5.0.0",
    "@pattern-lab/uikit-workshop": "^5.0.2",
    "chalk": "^2.4.2",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eyeglass": "^2.4.1",
    "gulp": "^4.0.2",
    "gulp-cheerio": "^1.0.0",
    "gulp-filter": "^6.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.2.3",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-svg-symbols": "^3.2.3",
    "gulp-svgo": "^2.1.1",
    "minimist": "^1.2.0",
    "semantic-release": "^15.13.27",
    "styleguidekit-assets-default": "^3.5.2",
    "styleguidekit-mustache-default": "^3.1.0",
    "stylelint": "^11.1.1",
    "stylelint-config-sass-guidelines": "^6.1.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.12.0"
  },
  "dependencies": {
    "gravy-sass": "^2.1.1",
    "modularscale-sass": "^3.0.10",
    "normalize-scss": "^7.0.1"
  },
  "engines": {
    "node": "^8.11.1",
    "npm": "^5.8.0"
  },
  "eyeglass": {
    "sassDir": "src/ui-lib/sass",
    "name": "gravity-ui-web",
    "exports": "eyeglass-exports.js",
    "needs": "^1.4.1 || ^2.0.0"
  }
}
