{% extends 'atoms-unordered-list' %}

{%- from 'molecules-job-card' import jobCard -%}

{#
  Extend the unordered-list's unorderedListItem block
  to insert a card
#}
{%- block unorderedListItem -%}
  <li>
    {{ jobCard(item) | safe }}
  </li>
{% endblock -%}

{# Reusable macro for other templates to import: #}
{%- macro jobList(location) -%}
  <section class="grav-c-job-list">
    <header>
      <h2>{{location.city}}, {{location.country}}</h2>
    </header>
    {{ unorderedList(location.jobs) | safe }}
  </section>
{%- endmacro -%}

{# Example rendering: #}
{%- block example -%}
  {{ jobList(location) | safe }}
{%- endblock -%}
