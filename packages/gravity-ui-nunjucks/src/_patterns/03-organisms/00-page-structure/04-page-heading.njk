{%- from 'atoms-image' import image -%}

{%- macro pageHeading(title, description, dateTime, img) -%}
<div class="grav-c-page-heading">
  <h1 class="grav-c-page-heading__title">{{ title }}</h1>
  <p>{{ description }}</p>
  {% if dateTime %}
    <time datetime="{{dateTime.machine}}">{{dateTime.human}}</time>
  {% endif %}
  {% if img %}
    {{ image(img.src, img.alt, img.class) | safe }}
  {% endif %}
</div>
{%- endmacro -%}

