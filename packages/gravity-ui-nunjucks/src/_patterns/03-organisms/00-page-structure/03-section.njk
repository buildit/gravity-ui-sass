{%- from 'atoms-two-columns-text' import twoColumnsText -%}
{%- from 'molecules-list-inline-row' import listInlineRow -%}
{%- from 'molecules-list-cards-basic' import listCardsBasic -%}

<section{% if section.class %} class="{{section.class}}"{% endif %}>
  {% if section.title -%}
    <h2>{{section.title}}</h2>
  {%- endif %}
  {% for contentItem in section.content -%}
    {# Atoms #}
    {%- if contentItem.paragraph -%}
      {%- set htmlContent = contentItem.paragraph -%}
      {% include "atoms-paragraph" %}
    {%- endif -%}

    {%- if contentItem.blockquote -%}
      {%- set htmlContent = contentItem.blockquote -%}
      {% include "atoms-blockquote" %}
    {%- endif -%}

    {%- if contentItem.twoColumnsList -%}
      {{ twoColumnsText(contentItem.twoColumnsList) | safe }}
    {%- endif -%}

    {# Molecules #}
    {%- if contentItem.inlineRow -%}
      {{ listInlineRow(contentItem.inlineRow) | safe }}
    {%- endif -%}
  {% endfor %}
</section>
