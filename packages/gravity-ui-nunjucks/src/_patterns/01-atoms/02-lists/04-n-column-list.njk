{%- macro twoColumnList(list) -%}
  <ul class="grav-o-two-column grav-o-column-list">
    {% for item in list -%}
      <li>
        {% if item.url %}<a href="{{ item.url }}">{% endif %}
          {{ item.title }}
          {% if item.url %}</a>{% endif %}
      </li>
    {%- endfor %}
  </ul>
{%- endmacro -%}

{%- macro nColumnList(list) -%}
    <ul class="grav-o-up-to-four-column grav-o-column-list">
    {% for item in list -%}
      <li>
        {% if item.url %}<a href="{{ item.url }}">{% endif %}
          {{ item.title }}
        {% if item.url %}</a>{% endif %}
      </li>
    {%- endfor %}
  </ul>
{%- endmacro -%}

<section>
  <h2>Two Column List</h2>
  {{- twoColumnList(list) | safe -}}
</section>
<section>
  <h2>Up to Four Column List</h2>
  {{- nColumnList(list) | safe -}}
</section>
