{%- from 'atoms-label' import label -%}
{%- from 'atoms-text-input' import textInput -%}

{# Reusable macro for other templates to import: #}
{%- macro formGroup(form) -%}
<div class="grav-c-form-group">
  {{ label(form.label, form.id) | safe }}
  {{ textInput(form.id, null, form.type, form.required, form.disabled) | safe }}
</div>
{%- endmacro -%}

{# Example rendering: #}
{{- formGroup(form) | safe -}}
