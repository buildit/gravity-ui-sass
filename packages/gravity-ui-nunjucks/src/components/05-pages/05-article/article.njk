{%- from '@page-intro' import pageIntroContents -%}

{%- extends '@basic-page' -%}

{%- block pageContent %}
<main>
  <article class="grav-o-full-bleed__content grav-c-article">
    <header class="grav-c-page-intro">
      {{ pageIntroContents(article.title, article.description, article.dateTime, article.img) | safe }}
    </header>
    <div class="grav-c-ostentatious-copy">
      {{ article.copy | safe }}
    </div>
  </article>
  <hr />
</main>
<aside class="grav-o-full-bleed__content">
  {% include '@related-items' %}
</aside>
{%- endblock -%}
