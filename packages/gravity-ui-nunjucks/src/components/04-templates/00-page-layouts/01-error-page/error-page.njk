{%- extends '@basic-page' -%}

{%- from '@cta' import cta -%}
{%- from '@ascii-art' import asciiArt -%}

{%- block pageContent %}
  <main class="grav-o-container grav-u-pb-xl">
    <section class="grav-o-section grav-u-text-centered">
      {{ asciiArt( ascii ) | safe }}
      <h1>{{title}}</h1>
      <p>{{text}}</p>
      <div>
        {{ cta(homeLink.text, homeLink.url) | safe }}
      </div>
    </section>
  </main>
{%- endblock -%}
